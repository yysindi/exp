<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "exp-logo/logo-01.png" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "Find Gigs", jobs_path, class: "nav-link", id: "gigs-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Profile", "#", class: "nav-link", id: "profile-link" %>
        </li>
        <% if user_signed_in? %>
          <% if current_user.applications.any? %>
            <%= link_to root_path, class: "navbar-bell-link" do %>
              <%= image_tag "icons/bell-active.png", class: "bell-icon" %>
            <% end %>
          <% else %>
            <%= link_to root_path, class: "navbar-bell-link" do %>
              <%= image_tag "icons/bell.png", class: "bell-icon" %>
            <% end %>
          <% end %>
        <% end %>
        <li class="nav-item dropdown">
          <% @user = User.find(current_user.id) %>
          <%= cl_image_tag @user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Action", "#", class: "dropdown-item", id: "action1-link" %>
            <%= link_to "Another action", "#", class: "dropdown-item", id: "action2-link" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item", id: "logout-link" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Find Gigs", jobs_path, class: "nav-link", id: "gigs-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Login/Sign-up", new_user_session_path, class: "nav-link", id: "login-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<div class="whole-page-container">
  <div class="top-popout-banner">
  <%= image_tag "popout-text/findajobgetexp-01.png", :class => "find-a-gig"%>
  </div>
  <div class="cta-banner">
    <div class="green-background">
      <%= image_tag "exp-app-mockup-phone/app-mockup-gradient-with-daggers-01.png", :class => "app-mockup"%>
      <div class="central-cta">
        <div class="cta-explainer">
          <h1 id="central-cta-title">Catch 22 for Under-30s</h1>
          <p class="paragraph-normal-font">Can't start a career without experience, yet can't get experience without a job?</p>
        </div>
        <div class="cta-explainer-02">
          <p class="paragraph-normal-font", id="paragraph-normal-font-bigger">Apply to gigs <b>in one click</b>, level up your profile, and get hired.</p>
          <%= link_to "Find Gigs", jobs_path, class: "cta-purple-button" %>
        </div>
      </div>

    </div>
  </div>
  <div class="top-gigs-banner">
    <div class="green-background">
      <%= image_tag "background-ribbons/floating-balls-01.png", :class => "floating-balls", id: "lower-floating-balls"%>
      <div class="top-gigs-box">
          <h1 id="top-gigs-title">Latest Gigs</h1>
          <% @jobs.each do |job| %>
            <%= link_to job_path(id: job.id), class: "top-job-box", id:"top-job-box-01" do %>
              <div class="top-job-inner" id="top-job-leftmost-inner">
                <% if job.logo.present? %>
                  <%= image_tag job.logo, class: "top-gigs-logo" %>
                <% else %>
                  <%= image_tag "exp-logo/logo-01.png", class: "top-gigs-logo" %>
                <% end %>
              </div>
              <div class="top-job-inner" id="top-job-middle-inner">
                <div class="top-job-inner-upper-box">
                <h3 class="weighted-h3"><%= job.company_name %></h3>
                </div>
                <div class="top-job-inner-lower-box">
                <h3 class="weightless-h3"><%= job.title %></h3>
                </div>
              </div>
              <div class="top-job-inner" id="top-job-rightmost-inner">
                <div class="top-job-inner-upper-box">
                <h3 class="weighted-h3">Â£<%= job.compensation %> p.w.</h3>
                </div>
                <div class="top-job-inner-lower-box">
                <h3 class="weightless-h3"><%= job.location %></h3>
                </div>
              </div>
            <% end %>
          <% end %>
      </div>
    </div>
  </div>
  <div class="companies-we-love-banner">
    <div class="green-background">
    </div>
  </div>
</div>
